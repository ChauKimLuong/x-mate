//- views/admin/layouts/default.pug
doctype html
html(lang="vi")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    title= title || "Admin"
    link(rel="stylesheet", href="/css/admin/admin.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")
  
    if title === 'Reviews List'
      link(rel="stylesheet", href="/css/components/reviews.css")
    if title==='Order'
      link(rel="stylesheet", href="/css/components/orders.css")

    block head
    // Chart.js (cho dashboard)
    script(src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js")
  body
    .shell
      aside.sidebar
        .brand
          span.icon 💠
          span.txt X-Mate
        nav.menu
          a.item(class=active==='overview'?'active':'', href="/admin")
            span.ico 🧭
            span.lbl Overview
          a.item(href="/admin/users")
            span.ico 👥
            span.lbl Users
          a.item(href="/admin/reports/revenue")
            span.ico 📈
            span.lbl Reports
          a.item(href="/admin/promotions")
            span.ico 🎟️
            span.lbl Promotions
          a.item(href="/admin/products")
            span.ico 🛒
            span.lbl Products
          a.item(href="/admin/inventory")
            span.ico 📦
            span.lbl Inventory
          a.item(href="/admin/inventory-support")
            span.ico 🛠️
            span.lbl Inventory Support
          a.item(href="/admin/reviews")
            span.ico ⭐
            span.lbl Reviews
          a.item(href="/admin/orders")
            span.ico 🧾
            span.lbl Orders
      main.main
        header.topbar
          .left
            input.search(type="search" placeholder="Search")
            button.btn.btn-dark + New Task
          .right
            button.btn LogOut
            .user
              img(src="https://i.pravatar.cc/40?img=5" alt="avatar")
              span.name Admin
        .container
          block content
    //- page-level scripts
    block scripts
