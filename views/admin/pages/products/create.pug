    /* ===== Modal base ===== */
    /* Đưa biến ra global để modal dùng được */
    /* ===== Modal (clean, compact) ===== */
    /* Biến dùng chung */
    :root{
      --ink:#0f172a;--muted:#6b7280;--line:#e5e7eb;--bg:#fff;
      --ring:#f97316;--ring-weak:rgba(249,115,22,.15);
      --r:12px;--sh:0 6px 18px rgba(16,24,40,.06);
      --s2:8px;--s3:12px;--s4:16px;
      --overlay:rgba(2,6,23,.50);
    }

    /* Lớp phủ + căn giữa */
    .modal{
      position:fixed;inset:0;display:none;align-items:center;justify-content:center;
      padding:16px;background:var(--overlay);z-index:50;
      /* giảm banding trên nền tối */
      -webkit-backdrop-filter:saturate(120%) blur(2px);
      backdrop-filter:saturate(120%) blur(2px);
    }
    /* ===== Filebox nicer ===== */
    .filebox{
      position:relative;
      display:inline-flex;
      align-items:center;
      justify-content:center;
      gap:10px;
      isolation:isolate;
    }
    .filebox input[type="file"]{
      position:absolute;
      inset:0;
      opacity:0;
      cursor:pointer;
      z-index:2; /* nằm trên để bắt click */
    }
    .filebox .fake{
      display:inline-flex;
      align-items:center;
      gap:10px;
      padding:10px 14px 10px 12px;
      border:1px dashed var(--line, #e5e7eb);
      border-radius:12px;
      background:#fff;
      font-weight:500;
      color:#374151;
      line-height:1;
      transition:border-color .15s, box-shadow .15s, transform .06s, background .15s;
      user-select:none;
    }

    /* icon (SVG inline bằng data-URI) */
    .filebox .fake::before{
      content:"";
      width:18px; height:18px;
      display:inline-block;
      background-repeat:no-repeat;
      background-position:center;
      background-size:18px;
      /* icon upload */
      background-image: url("data:image/svg+xml,%3Csvg width='20' height='20' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M12 16V4m0 0 4 4m-4-4-4 4M4 16v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-2' stroke='%23f97316' stroke-width='1.6' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
      opacity:.95;
    }

    /* Hover / focus (focus-within để khi tab vào input vẫn nổi bật) */
    .filebox:hover .fake{ box-shadow:0 6px 18px rgba(16,24,40,.06); border-color:#fbd4bd; }
    .filebox:focus-within .fake{
      border-color:var(--accent, #f97316);
      box-shadow:0 0 0 4px rgba(249,115,22,.15), 0 6px 18px rgba(16,24,40,.06);
    }

    /* “nhấn” nhẹ khi đang click */
    .filebox:active .fake{ transform:translateY(1px); }

    /* Badge hiển thị số file (sử dụng attribute data-files để JS set) */
    .filebox .fake::after{
      content: attr(data-files);
      display:none;
      margin-left:2px;
      font-weight:600;
      font-size:12px;
      color:#0f172a;
      background:#fff7ed;
      border:1px solid #ffe1cc;
      padding:3px 6px;
      border-radius:999px;
      line-height:1;
