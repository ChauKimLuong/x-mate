extends ../../layouts/default.pug

block content
  h4.text-uppercase.text-secondary.mb-4 Reviews List

  .reviews-grid
    each r in reviews
      .review-card
        .card-body
          small Reviewed in #{r.country} on #{r.date}
          p "#{r.content}"
          .stars
            - for (let i = 1; i <= 5; i++)
              if i <= r.stars
                i.bi.bi-star-fill
              else
                i.bi.bi-star
            span.quality #{r.quality}
        .review-footer
          img(src=r.avatar, alt=r.user)
          .info
            strong #{r.user}
            small #{r.title}
          i.bi.bi-quote
