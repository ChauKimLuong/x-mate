extends ../../layouts/default.pug
include ../../mixins/product-card.pug

block title
  title X-Mate | Trang chủ

block content
  .home-banner

  if error
    .alert.alert--error(role="alert")= error
  if isSearch
    .search-summary
      .search-summary__container
        h1.search-summary__title
          | Kết quả cho "
          span.search-summary__keyword= searchQuery
          | "
        p.search-summary__meta= `${searchTotal} sản phẩm`
  .products
    if products && products.length
      each p in products
        +productCard(p)
    else
      if isSearch
        .search-empty Không tìm thấy sản phẩm nào phù hợp.
      else
        .search-empty Chưa có sản phẩm nào.

block extra_js
  script(src="/js/header.js")
  script(src="/js/alerts.js")
  script(src="/js/home.js")
