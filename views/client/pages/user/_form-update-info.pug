.form-card
    h2 Chỉnh sửa thông tin tài khoản
    form(method="POST" action="/user/update-info" class="form")
        .form-group
            label(for="full_name") Họ và tên
            input#full_name(type="text" name="full_name" value=user.full_name required)

        .form-group
            label(for="dob") Ngày sinh
            input#dob(type="date" name="dob" value=(user.dob ? user.dob.toISOString().split('T')[0] : ''))

        .form-group
            label Giới tính
            select(name="gender")
                option(value="Nam" selected=(user.gender==='Nam')) Nam
                option(value="Nữ" selected=(user.gender==='Nữ')) Nữ
                option(value="Không tiết lộ" selected=(user.gender==='Không tiết lộ')) Không tiết lộ

        .form-group
            label(for="phone") Số điện thoại
            input#phone(type="text" name="phone" value=user.phone)

        .form-group
            label(for="height_cm") Chiều cao (cm)
            input#height_cm(type="number" name="height_cm" value=user.height_cm min="50" max="300")

        .form-group
            label(for="weight_kg") Cân nặng (kg)
            input#weight_kg(type="number" name="weight_kg" value=user.weight_kg min="2" max="500")

        button(type="submit" class="button button--primary w-full mt-16") Cập nhật thông tin
