header.site-header
  .top-strip
    .container
      ul.top-links
        li
          a(href="/ve-chung-toi") Ve X-MATE
        li
          a(href="/cxp") CXP
      ul.top-links.top-links--right
        li
          a(href="/coolclub") Coolclub
        li
          a(href="/blog") Blog
        li
          a(href="/cskh") CSKH
        li
          a(href="/auth/login") Dang nhap
  .main-bar
    .container
      a.brand(href="/", aria-label="Trang chu X-Mate")
        img(src="/images/logo1.png", alt="X-Mate", height="60")
      nav.primary-nav
        a.primary-nav__item.is-new(href="/hang-moi") NEW
        a.primary-nav__item(href="/nam") NAM
        a.primary-nav__item(href="/nu") NU
        a.primary-nav__item(href="/the-thao") THE THAO
        a.primary-nav__item.is-sale(href="/sale")
          span.primary-nav__sale SALE
          span.primary-nav__sale-tag -50%
        a.primary-nav__item(href="/cs") C&S
      .header-actions
        form.search-form(action="/search", method="get")
          label.sr-only(for="header-search") Tim kiem san pham
          - const currentSearchQuery = typeof searchQuery === 'string' ? searchQuery : ''
          input#header-search(type="search", name="q", placeholder="Tim kiem...", value=currentSearchQuery)
          button(type="submit", aria-label="Tim kiem")
            span.icon.icon--search
        a.action-link(href="/user/info", aria-label="Tai khoan")
          span.fa-solid.fa-user
        a.action-link.cart(href="/cart", aria-label="Gio hang")
          span.fa-solid.fa-cart-shopping
          span.cart__badge= typeof cartQuantity === "number" ? cartQuantity : 0
